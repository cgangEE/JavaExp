import javax.swing.*;

import java.awt.*;
import java.io.*;
import java.util.*;

public class Client {
	public static void main(String args[]){
		JFrame client = new JFrame("Client");
		
		client.setLayout(new FlowLayout());
		
		JTextArea talk = new JTextArea("", 10, 10);
		
		JTextField input = new JTextField(10);
		
		JButton send = new JButton("send");
		
		client.add(talk);
		client.add(input);
		client.add(send);
		
		client.setSize(500, 500);
		
		client.pack();
		client.setVisible(true);
	}
}
